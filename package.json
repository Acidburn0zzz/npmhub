{
  "name": "npmhub",
  "version": "0.0.0",
  "description": "",
  "devDependencies": {
    "chrome-webstore-upload-cli": "^1.0.0",
    "dot-json": "^1.0.3",
    "web-ext": "^1.9.1",
    "xo": "^0.18.2"
  },
  "private": true,
  "author": "zeke",
  "license": "MIT",
  "scripts": {
    "test": "xo",
    "release-amo": "cd extension && OK='has been submitted for review.' && web-ext sign | sed -n \"s/\\($OK\\).*$/\\1/;1,/$OK/p\" | perl -pe 'BEGIN { $s=1 } END { exit $s } $s=0 if /'\"$OK\"'/;'",
    "release-cws": "cd extension && webstore upload --auto-publish",
    "update-version": "dot-json extension/manifest.json version $(date -u +%Y.%-m.%-d.%-H%M)"
  },
  "xo": {
    "space": 2,
    "envs": [
      "browser",
      "webextensions"
    ]
  }
}
